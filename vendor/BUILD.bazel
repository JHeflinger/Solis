cc_library(
    name = "spdlog",
    hdrs = glob([
        "spdlog/include/**/*.h",
    ]),
    srcs = glob([
        "spdlog/src/*.cpp"
    ]),
    includes = ["spdlog/include"],
    copts = ["-DSPDLOG_COMPILED_LIB"],
    visibility = ["//visibility:public"],
)

cc_library(
    name = "glfw",
    hdrs = glob([
        "glfw/include/**/*.h",
        "glfw/src/*.h",
    ]),
    includes = ["glfw/include"],
    srcs = glob([
        "glfw/include/**/*.c",
        "glfw/src/*.c",
    ]),
    linkopts = ["-lGL"],
    copts = ["-D_GLFW_X11"],
    visibility = ["//visibility:public"]
)

cc_library(
    name = "glm",
    hdrs = glob([
        "glm/glm/**/*.hpp",
        "glm/glm/*.hpp"
    ]),
    includes = ["glm/glm"],
    visibility = ["//visibility:public"]
)